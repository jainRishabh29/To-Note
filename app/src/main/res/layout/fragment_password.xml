<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PasswordFragment">

    <com.hanks.passcodeview.PasscodeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/passcodeView"
        android:background="@color/backgroundColor"
        app:correctStateColor="@color/correctStateColor"
        app:wrongStateColor="@color/incorrectStateColor"
        app:passcodeLength="4"
        />

</FrameLayout>